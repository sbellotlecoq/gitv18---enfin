<%= form.label :password%>
<%= form.password_field :password, class: "form-control", placeholder: "password" %>
</div>
<div class="mb-3">


<div class="mb-3">
<%= form.submit "enregistres toi sinon pas de chocolat", class: "btn btn-primary" %>
</div>
<% end %>